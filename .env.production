APP_NAME="Digiwaxx"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://app.digiwaxx.com

LOG_CHANNEL=stack
LOG_LEVEL=error

# ===========================================
# DATABASE - GET THESE FROM YOUR CPANEL
# ===========================================
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=YOUR_DATABASE_NAME
DB_USERNAME=YOUR_DATABASE_USERNAME
DB_PASSWORD=YOUR_DATABASE_PASSWORD

# ===========================================
# CACHE & SESSION
# ===========================================
BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# ===========================================
# EMAIL - UPDATE WITH YOUR SMTP SETTINGS
# ===========================================
MAIL_MAILER=smtp
MAIL_HOST=mail.digiwaxx.com
MAIL_PORT=587
MAIL_USERNAME=noreply@digiwaxx.com
MAIL_PASSWORD=YOUR_EMAIL_PASSWORD
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@digiwaxx.com"
MAIL_FROM_NAME="Digiwaxx"

# ===========================================
# STRIPE PAYMENTS - GET FROM STRIPE DASHBOARD
# ===========================================
STRIPE_SECRET=sk_live_YOUR_STRIPE_SECRET_KEY
STRIPE_PUBLISHABLE=pk_live_YOUR_STRIPE_PUBLISHABLE_KEY
STRIPE_CURRENCY=usd
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET

# Stripe Price IDs (create products in Stripe Dashboard first)
STRIPE_PRICE_ARTIST_MONTHLY=price_YOUR_ARTIST_MONTHLY_ID
STRIPE_PRICE_ARTIST_ANNUAL=price_YOUR_ARTIST_ANNUAL_ID
STRIPE_PRICE_LABEL_MONTHLY=price_YOUR_LABEL_MONTHLY_ID
STRIPE_PRICE_LABEL_ANNUAL=price_YOUR_LABEL_ANNUAL_ID

# ===========================================
# PCLOUD STORAGE
# ===========================================
PCLOUD_ACCESS_TOKEN=your_pcloud_access_token
PCLOUD_LOCATION_ID=1
PCLOUD_FOLDER_ID=13199825142

# ===========================================
# RECAPTCHA - GET FROM GOOGLE RECAPTCHA ADMIN
# ===========================================
RECAPTCHA_SITE_KEY=YOUR_RECAPTCHA_SITE_KEY
RECAPTCHA_SECRET_KEY=YOUR_RECAPTCHA_SECRET_KEY

# ===========================================
# SECURITY SETTINGS
# ===========================================
CSRF_PROTECTION_ENABLED=true
RATE_LIMIT_LOGIN=5
RATE_LIMIT_API=60
SECURITY_MONITORING_ENABLED=true
LOG_FAILED_LOGIN_ATTEMPTS=true

# ===========================================
# TRANSLATIONS
# ===========================================
TRANSLATIONS_ENABLED=true
HIDE_LANGUAGE_SWITCHER=false
