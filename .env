# Laravel Environment Configuration
# IMPORTANT: Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

APP_NAME="Digiwaxx"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

# SECURITY: In production, MUST set:
# APP_ENV=production
# APP_DEBUG=false

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=digiwaxx
DB_USERNAME=root
DB_PASSWORD=

# Redis (Optional - for caching/sessions)
BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Email Configuration
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@digiwaxx.com"
MAIL_FROM_NAME="${APP_NAME}"

# CRITICAL: Stripe Payment Configuration
# SECURITY WARNING: Never commit actual API keys to Git!
# Get your keys from: https://dashboard.stripe.com/apikeys
#
# Test Keys (for development):
STRIPE_SECRET=sk_test_YOUR_SECRET_KEY_HERE
STRIPE_PUBLISHABLE=pk_test_YOUR_PUBLISHABLE_KEY_HERE
STRIPE_CURRENCY=usd
#
# Stripe Webhook Secret (from https://dashboard.stripe.com/webhooks)
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET_HERE
#
# Stripe Price IDs for Subscription Plans
# Create these in Stripe Dashboard: https://dashboard.stripe.com/products
# Then copy the Price IDs (starting with price_) here
STRIPE_PRICE_ARTIST_MONTHLY=price_ARTIST_MONTHLY_PLACEHOLDER
STRIPE_PRICE_ARTIST_ANNUAL=price_ARTIST_ANNUAL_PLACEHOLDER
STRIPE_PRICE_LABEL_MONTHLY=price_LABEL_MONTHLY_PLACEHOLDER
STRIPE_PRICE_LABEL_ANNUAL=price_LABEL_ANNUAL_PLACEHOLDER
#
# Production Keys (NEVER commit these):
# STRIPE_SECRET=sk_live_YOUR_LIVE_SECRET_KEY
# STRIPE_PUBLISHABLE=pk_live_YOUR_LIVE_PUBLISHABLE_KEY
#
# IMPORTANT: If keys are exposed, rotate immediately at Stripe Dashboard!

# pCloud Storage Configuration
# Get credentials from: https://www.pcloud.com/
PCLOUD_ACCESS_TOKEN=your_pcloud_access_token
PCLOUD_LOCATION_ID=1
PCLOUD_FOLDER_ID=13199825142
PCLOUD_AUDIO_PATH=your_audio_folder_id
PCLOUD_CLIENT_AUDIO_PATH=your_client_audio_folder_id
# Set to false to completely disable pCloud integration
PCLOUD_ENABLED=true
# Cache pCloud URLs for this many seconds
PCLOUD_CACHE_TTL=3600

# ============================================
# IMAGE LOADING CONFIGURATION
# ============================================
#
# Primary source for images: 'local' or 'pcloud'
# - 'local': Load images from local storage first (recommended when pCloud is disconnected)
# - 'pcloud': Load images from pCloud first, fall back to local if unavailable
IMAGE_PRIMARY_SOURCE=pcloud
#
# Enable automatic fallback to local storage when pCloud fails
# When true: If primary source fails, tries the other source
# When false: Only uses the primary source
IMAGE_ENABLE_FALLBACK=true
#
# To switch to pCloud as primary (when pCloud is working):
# IMAGE_PRIMARY_SOURCE=pcloud
# IMAGE_ENABLE_FALLBACK=false
#
# To use ONLY local storage (completely disable pCloud):
# IMAGE_PRIMARY_SOURCE=local
# IMAGE_ENABLE_FALLBACK=false
# PCLOUD_ENABLED=false

# AWS (if using S3 instead of pCloud)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Security Settings
# Session security
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# CSRF Protection
# Don't disable unless absolutely necessary
CSRF_PROTECTION_ENABLED=true

# Rate Limiting
# Login attempts per minute
RATE_LIMIT_LOGIN=5
# API requests per minute
RATE_LIMIT_API=60
# Password reset attempts per hour
RATE_LIMIT_PASSWORD_RESET=3

# File Upload Limits (in MB)
MAX_IMAGE_UPLOAD_SIZE=5
MAX_AUDIO_UPLOAD_SIZE=50

# Password Policy
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL_CHARS=true

# Monitoring & Logging
# Set to true in production to enable security monitoring
SECURITY_MONITORING_ENABLED=false
LOG_FAILED_LOGIN_ATTEMPTS=true
LOG_FILE_UPLOADS=true
LOG_PAYMENT_TRANSACTIONS=true

# Two-Factor Authentication
2FA_ENABLED=false
2FA_ISSUER="Digiwaxx"

# Google reCAPTCHA v3
# Get your keys from: https://www.google.com/recaptcha/admin
# SECURITY WARNING: Never commit actual keys to Git!
RECAPTCHA_SITE_KEY=your_recaptcha_site_key_here
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key_here

# API Keys for third-party services
# Add your API keys here as needed
GOOGLE_ANALYTICS_ID=
FACEBOOK_APP_ID=
TWITTER_API_KEY=

# reCAPTCHA Configuration
# CRITICAL: The old hardcoded secret key (6Lcz58IkAAAAAMwf7LkqCEfemauHtcMkK-c0Mj8z)
# has been exposed in git history and MUST be regenerated immediately!
#
# Steps to regenerate:
# 1. Go to: https://www.google.com/recaptcha/admin
# 2. Delete the old key pair
# 3. Create new reCAPTCHA v2 "I'm not a robot" Checkbox
# 4. Add your domain(s)
# 5. Copy the new secret key here
# 6. Update the site key in your frontend templates
RECAPTCHA_SECRET_KEY=your_new_recaptcha_secret_key_here
RECAPTCHA_SITE_KEY=your_new_recaptcha_site_key_here

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_DESTINATION=local
BACKUP_SCHEDULE=daily

# Performance
CACHE_QUERY_RESULTS=true
CACHE_TTL=3600

# ============================================
# MULTI-LANGUAGE / TRANSLATIONS
# ============================================
#
# Set to true to enable multi-language support
# When false: Site operates in English only (default behavior)
# When true: Language switcher appears, localized routes enabled (/es/, /pt/, etc.)
TRANSLATIONS_ENABLED=true

# Hide the language switcher even when translations are enabled
HIDE_LANGUAGE_SWITCHER=false

# Auto-translate dynamic content (track titles, descriptions)
AUTO_TRANSLATE_CONTENT=false

# Translation API Provider: 'deepl', 'google', 'claude'
TRANSLATION_PROVIDER=deepl

# DeepL API Key (get from https://www.deepl.com/pro-api)
DEEPL_API_KEY=your_deepl_api_key_here

# Development Tools (disable in production!)
TELESCOPE_ENABLED=false
DEBUGBAR_ENABLED=false

# ============================================
# SECURITY CHECKLIST FOR PRODUCTION
# ============================================
#
# Before deploying to production, ensure:
#
# [ ] APP_ENV=production
# [ ] APP_DEBUG=false
# [ ] Generate new APP_KEY (php artisan key:generate)
# [ ] Use real Stripe LIVE keys (not test keys)
# [ ] Rotate any exposed API keys
# [ ] SESSION_SECURE_COOKIE=true
# [ ] Enable HTTPS (SSL/TLS certificate)
# [ ] Configure email properly
# [ ] Set strong database password
# [ ] Enable security monitoring
# [ ] Configure backups
# [ ] Test all environment variables
# [ ] Remove all test/debug tools
# [ ] Review .gitignore includes .env
# [ ] Set up log rotation
# [ ] Configure firewall rules
#
# ============================================
